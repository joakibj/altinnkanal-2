{{# layout }}
    <div class="pure-g">
        <div class="pure-u-1">
            <h3>Changelog (newest first)</h3>
        </div>
        <div class="pure-u-1">
            <table class="pure-table">
                <thead>
                <tr>
                    <th>Service code</th>
                    <th>Service edition code</th>
                    <th>Topic</th>
                    <th>Enabled</th>
                    <th>Comment</th>
                    <th>Update date</th>
                    <th>Updated by</th>
                </tr>
                </thead>
                <tbody>
                {{# log }}
                    <tr>
                        <th>{{ serviceCode }}</th>
                        <th>{{ serviceEditionCode }}</th>
                        <th>{{ topic }}</th>
                        <th>{{ enabled }}</th>
                        <th>{{ comment }}</th>
                        <th>{{ updateDate }}</th>
                        <th>{{ updatedBy }}</th>
                    </tr>
                {{/ log }}
                </tbody>
            </table>
        </div>
        <div class="pure-u-1">
            <a href="/configuration/{{ serviceCode }}/{{ serviceEditionCode }}/edit" class="edit-button pure-button">Edit</a>
        </div>
{{/layout}}
{{> layout }}